# Server Configuration
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost
FRONTEND_URL=http://localhost:3000
DEBUG_MODE=true

# Authentication Configuration
JWT_ACCESS_SECRET=your-ACCESS-key
JWT_REFRESH_SECRET=your-REFRESH-key
ACCESS_TOKEN_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=timefly_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=timefly

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse_password

# Email Configuration
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=your_email@example.com

# Logging Configuration
AUTH_LOG_BATCH_SIZE=100
AUTH_LOG_PROCESS_INTERVAL=5000

# Stripe Configuration
STRIPE_SECRET_KEY=your_secret_here
STRIPE_PUBLISHABLE_KEY=your_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# Stripe Price IDs (copiados del Dashboard)
STRIPE_PRICE_PRO_MONTHLY=your_price_id_here
STRIPE_PRICE_PRO_YEARLY=your_price_id_here

# URLs for checkout redirect
STRIPE_SUCCESS_URL=https://timefly.dev/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=https://timefly.dev/pricing